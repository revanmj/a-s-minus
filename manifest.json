{
   "background": {
      "page": "background.html"
   },
   "browser_action": {
      "default_icon": "images/icon19.png",
      "default_popup": "popup.html",
      "default_title": "Awesome Screenshot Minus (Beta)"
   },
   "content_scripts": [ {
      "js": [ "javascripts/shortcuts.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_end"
   } ],
   "default_locale": "en",
   "description": "Awesome Screenshot Minus all the junk",
   "icons": {
      "128": "images/icon128.png",
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png"
   },
   "manifest_version": 2,
   "minimum_chrome_version": "37.0",
   "name": "Awesome Screenshot Minus (Beta)",
   "options_page": "options.html",
   "permissions": [
     "<all_urls>",
     "tabs",
     "storage",
     "desktopCapture",
     "notifications",
     "https://api.imgur.com/*"
   ],
   "version": "4.0.1.0",
   "web_accessible_resources": [ "images/success.gif", "images/clear.png", "images/icon19.png", "#" ]
}
